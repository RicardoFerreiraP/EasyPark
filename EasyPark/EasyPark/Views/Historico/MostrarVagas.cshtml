@using EasyPark.Models
@model List<Vaga>
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div>
    <h2>@Html.ActionLink("Cadastrar Vaga", "CadastrarVaga", "Vaga", null, null)</h2>

    <div style="margin-top:20px;">
        <div class="row">
            @foreach (Vaga v in Model)
            {
                if (v.Disponivel == true)
                {
                    <div class="col-lg-2 card text-white bg-success" style="text-align:center; margin-left:30px; margin-bottom:20px; max-width:100rem">
                        <div class="card-header">Vaga @v.VagaID Disponível</div>
                        <div class="card-body">
                            @Html.ActionLink("Ocupar Vaga", "OcuparVaga", "Historico", new { id = v.VagaID }, new { @class = "btn btn-secondary" })
         
                        </div>
                    </div>
                }

                else if (v.Disponivel == false)
                {
                    <div class="col-lg-2 card text-white bg-danger" style="text-align:center; margin-left:30px; margin-bottom:20px; max-width:100rem">
                        <div class="card-header">Vaga @v.VagaID Indisponível</div>
                        <div class="card-body">
                            @Html.ActionLink("+Detalhes", "VagaDetalhes", "Historico", new { id = v.VagaID }, new { @class = "text-info" })
                            @Html.ActionLink("Finalizar", "Finalizar", "Historico", new { id = v.VagaID }, new { @class = "text-info" })
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
