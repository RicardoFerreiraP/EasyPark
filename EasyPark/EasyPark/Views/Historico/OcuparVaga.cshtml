@using EasyPark.Models
@model Historico
@{
    int id = ViewBag.VagaId;
    ViewBag.Title = "OcuparVaga";
}

@using (Html.BeginForm("OcuparVaga", "Historico", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Ocupar Vaga</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Vaga.VagaID)

        <div class="form-group">

            @Html.LabelFor(model => model.Automovel, new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBox("Placa", null, new { @class = "form-control", @placeholder = "Placa do automóvel" })
                @Html.ValidationMessageFor(model => model.Automovel, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ocupar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
