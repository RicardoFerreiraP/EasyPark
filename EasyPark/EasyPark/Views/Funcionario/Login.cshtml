@model EasyPark.Models.Funcionario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layout.cshtml";
}


@using (Html.BeginForm("Login", "Funcionario", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Login</legend>
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.CPF, new { @class = "control-label text-align:center" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CPF, new { @class = "form-control", @style = "max-width:300px" })                    
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Senha, new { @class = "control-label text-align:center" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @type = "password", @style = "max-width:300px" })                   
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Entrar" class="btn btn-success" />
                </div>
            </div>

        </div>
    </fieldset>
}
